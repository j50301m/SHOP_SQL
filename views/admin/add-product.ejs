<%- include("../includes/header.ejs") %> 
<main class="container p-5">
  <form>
      <div class="mb-3">
          <label for="title">產品標題</label>
          <input type="text" class="form-control" id="title" name="title" aria-describedby="titleHelp">
          <div id="titleHelp" class="form-text text-muted">請輸入標題內容</div>
      </div>

      <div class="mb-3">
        <label for="imgUrl">產品圖片</label>
        <input type="text" class="form-control" id="imgUrl" name="imgUrl" aria-describedby="imgUrlHelp">
        <div id="imgUrlHelp" class="form-text text-muted">請輸入圖片地址</div>
    </div>

    <div class="mb-3">
      <label for="price">產品價格</label>
      <input type="number" min="0" max="999999" step="0.01" class="form-control" id="price" name="price" aria-describedby="priceHelp">
      <div id="priceHelp" class="form-text text-muted">請輸入價格</div>
    </div>
  
    <div class="mb-3">
      <label for="description">產品介紹</label>
      <textarea class="form-control" id="description" name="description" rows="4"></textarea>
      <div id="descriptionHelp" class="form-text text-muted">請輸入產品內容</div>
    </div>

    <button type="submit" class="btn btn-primary" formaction="/admin/add-product" formmethod="post">增加產品</button>
  </form>
</main>
    
<%- include("../includes/footer.ejs") %> 
